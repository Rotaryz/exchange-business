// 主色区域
$color-main = #D83F35 // 主颜色
$color-main-disable = rgba(216, 63, 53, 0.5) // 主禁用颜色
$color-sub = #1E1C36 // 副颜色
$color-shade-main = linear-gradient(90deg, #FF7C60 0%, #F94C5F 100%) // 主渐变色
$color-shade-sub = linear-gradient(131deg, #FFC416 0%, #FE9E10 100%) // 副渐变色

// 辅助色区域
$color-background = #F5F5F9 // 背景色
$color-line = #EFEEF5 // 线条颜色
$color-money = #D83F35 // 金额颜色
$color-tag = #FFE500 // 标签颜色
$color-white = #ffffff
$color-border = #EBEAF3 // 线条颜色
// 文字色区域
$color-text-main = #1D2023 // 主文字色
$color-text-sub = #3F454B // 副文字色
$color-text-assist = #606972 // 辅助文字颜色
$color-text-secondary = #818D99 // 次要文字颜色
$color-text-tip =  #BCC4CC
