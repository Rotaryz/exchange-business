@import "~@style/base.styl"

/*惯性滚动*/
.ios-scroll-smooth
  -webkit-overflow-scrolling: touch

/*隐藏scroll*/
.no-scroll-bar
  ::-webkit-scrollbar
    width: 0
    height: 0
    color: transparent

.scroll-wrapper
  height: 105%
  width: 100%
  background: #FAFAFA;
  position: relative
  border-radius: 2px 0 0 2px
  padding-top: 1px
  .goods-wrapper
    layout(row, block, nowrap)
    padding: 0 0
    height: 100%
    overflow-x: scroll
    border-radius: 2px
    .goods
      margin-left: 1px
      border-left: 0.5px solid $color-line

/*商品卡片*/
.goods-default
  width: 110px
  font-family: $font-family-regular
  line-height: 1
  background: #FFF;
  border-radius: 2px 0 0 2px
  &:fist-child > .goods-cover
    border-radius: 2px 0 0 2px
  .goods-cover
    display: block
    width: 110px
    height: @width
    overflow: hidden
    font-size: 0
    margin-left: 1px
    position: relative
    .goods-none
      background: rgba(255, 255, 255, 0.6)
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      display: flex
      align-items: center
      justify-content: center
      .goods-none-img
        width: 59px
        height: 59px
  .name
    border-top: 0.5px solid $color-line
    height: 36px
    box-sizing: border-box
    color: $color-text-main
    padding-top: 5px
    padding-left: 6px
    padding-right: 15px
    font-size: 12px;
    line-height: 15px
    no-wrap-plus()
  .money
    padding-top: 4px
    font-family: $font-family-medium
    color: #D83F35;
    font-size: 12px
    line-height: 12px
    padding-left: 6px
    padding-right: 6px
    no-wrap()
    .unit
      padding-right: 1px
