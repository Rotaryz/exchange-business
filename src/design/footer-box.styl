@import "~@design"
.footer-box
  position: fixed
  width: 100vw
  height: 64px
  z-index: 200
  bottom: 0
  left: 0
  background: $color-white
  box-sizing: border-box
  padding: 10px 20px
  .footer-btn
    width: 100%
    height: 44px
    background: $color-main
    border-radius: 2px
    line-height: 44px
    text-align: center
    font-family: $font-family-regular
    color: $color-white
    font-size: $font-size-16
    letter-spacing: 0.8px

